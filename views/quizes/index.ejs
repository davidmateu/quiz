<h2>Busqueda de preguntas</h2>
<form action="/quizes" method="GET">
	<input type="text" value='<%= busqueda %>' name='search' placeholder='Parte de la pregunta' autofocus autocomplete='off'>
	<input type="submit" value='Enviar'>
</form>
<br/>
<h2>Listado de preguntas</h2>

<table style='margin:auto;'>
  <% var i; for (i=0; i < quizes.length; i++) { %>        
     <tr>
     	<td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
		<td><a href="/quizes/<%= quizes[i].id %>/edit"><button type="button">editar</button></a></td>
		<td>
		  <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
		    <button type="submit" onClick="return confirm('Â¿ Eliminar: <%= quizes[i].pregunta %> ?');">
		    	eliminar
		    </button>
		  </form>
		</td>
     </tr> 
  <% } %>
</table>
<a href="/quizes/new"><button type="button">Crear Pregunta</button></a>